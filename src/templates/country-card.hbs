{{#each this}}
<div class="country">
    
    <div class="country-body">
        <h2 class="country-title">
             {{name}}
        </h2>
        <p class="country-text">
            Capital: {{capital}} 
        </p>
        <p class="country-text">
            Population: {{population}}  
        </p>
        <p class="country-text">
            <ul >
            Languages:
                {{#each languages}}
                <li class="country-languages">{{name}}, {{nativeName}}</li>
                {{/each}}
            </ul>
        </p>
    </div>
    
    <div class="country-content">
        <img src={{flag}} alt={{name}} class="country-image" width="300">
    </div>
</div>
{{/each}}